generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Stack {
  id    String @id @default(cuid())
  name  String
  href  String
  techs Tech[]
}

model Tech {
  id      String @id @default(cuid())
  name    String
  key     String
  stackId String
  stacks  Stack  @relation(fields: [stackId], references: [id])
}

model GuestMessage {
  id        String   @id @default(cuid())
  github    String   @unique
  message   String
  createdAt DateTime @default(now())

  @@map("guest_messages")
}
