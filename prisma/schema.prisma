generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
}

model GuestMessage {
    id        String   @id @default(cuid())
    github    String   @unique
    message   String
    createdAt DateTime @default(now())

    @@map("guest_messages")
}
